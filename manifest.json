{
  "manifest_version": 3,
  "name": "SaveTabs",
  "version": "1.0.0",
  "description": "A application designed for saving the url of open tabs.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}